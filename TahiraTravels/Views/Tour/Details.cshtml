@{
    ViewData["Title"] = "Tour Details";
}
@using ViewModels.ViewModels
@model TourDetailsViewModel

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.Name" />
        }
        else
        {
            <img src="~/images/default-image.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
        }
    </div>
    <div class="text-center my-3">
        <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/271deea8-e28c-41a3-aaf5-2913f5f48be6/de7834s-6515bd40-8b2c-4dc6-a843-5ac1a95a8b55.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..BopkDn1ptIwbmcKHdAOlYHyAOOACXW0Zfgbs0-6BY-E" alt="Tour Guide"
             style="width:100px; height:100px; border-radius:50%;" />
        @if (Model.Guide != null)
        {
            <div>
                <a asp-controller="TourGuide" asp-action="Details" asp-route-id="@Model.Guide.Id" class="btn btn-primary mt-2">
                    Check more
                </a>
            </div>
        }
    </div>

    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <hr />
            <p class="card-text">@Model.Description</p>
            <hr />
            <p class="card-text"><small class="text-muted">Category: @Model.Category</small></p>
            <p class="card-text"><small class="text-muted">Created On: @Model.CreatedOn</small></p>
            <p class="card-text"><small class="text-muted">Author: @Model.Author</small></p>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <button type="button" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
                @if (User?.Identity?.IsAuthenticated == true && !Model.IsAuthor && !Model.IsSaved)
                {
                    <form asp-controller="Tour" asp-action="Save" method="post" class="d-flex justify-content-center align-items-center flex-fill mx-1">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-heart"></i> Add to Favorites
                        </button>
                    </form>
                    <form asp-controller="Booking" asp-action="Book" method="post" class="d-flex justify-content-center align-items-center flex-fill mx-1">
                        <input type="hidden" name="tourId" value="@Model.Id" />
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-calendar-check"></i> Book
                        </button>
                    </form>
                }
                @if (Model.IsAuthor)
                {
                    <a asp-controller="Tour" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Tour" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                }
            </div>
            @if (Model.CanReview)
            {
                    <p></p>
                <a asp-action="AddReview" asp-route-tourId="@Model.Id" class="btn btn-primary">
                    Add Review
                </a>
            }
            <p></p>
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="TourGuide"
                   asp-action="Add"
                   asp-route-tourId="@Model.Id"
                   class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">
                    <i class="fas fa-user-plus"></i> Add Tour Guide
                </a>
            }

            <hr />
            <h4>Reviews</h4>

            @if (Model.Reviews.Any())
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="border p-2 mb-2">
                        <strong>@review.UserName</strong> <small class="text-muted">@review.CreatedAt.ToString("g")</small>
                        <p>@review.Comment</p>
                    </div>
                }
            }
            else
            {
                <p>No reviews yet for this tour.</p>
            }

        </div>
    </div>
</div>